{
    "name": "fly-extension",
    "displayName": "FLY Language",
    "description": "FLY language LSP integration in VSCode",
    "publisher": "ISISLab",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fly",
                "aliases": [
                    "fly"
                ],
                "extensions": [
                    ".fly"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fly",
                "scopeName": "source.fly",
                "path": "./syntaxes/fly.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "fly.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "FLY Diagram"
            },
            {
                "command": "fly.diagram.fit",
                "title": "Fit to Screen",
                "category": "FLY Diagram"
            },
            {
                "command": "fly.diagram.center",
                "title": "Center selection",
                "category": "FLY Diagram"
            },
            {
                "command": "fly.diagram.delete",
                "title": "Delete selected element",
                "category": "FLY Diagram"
            },
            {
                "command": "fly.diagram.export",
                "title": "Export diagram to SVG",
                "category": "FLY Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "fly.diagram.open",
                    "when": "editorLangId == 'fly'"
                },
                {
                    "command": "fly.diagram.fit",
                    "when": "fly-diagram-focused"
                },
                {
                    "command": "fly.diagram.center",
                    "when": "fly-diagram-focused"
                },
                {
                    "command": "fly.diagram.delete",
                    "when": "fly-diagram-focused"
                },
                {
                    "command": "fly.diagram.export",
                    "when": "fly-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "fly.diagram.open",
                    "when": "editorLangId == 'fly'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "fly.diagram.open",
                    "when": "editorLangId == 'fly'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "fly.diagram.open",
                    "when": "resourceExtname == '.fly'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "fly.diagram.fit",
                "when": "fly-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "fly.diagram.center",
                "when": "fly-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "fly.diagram.export",
                "when": "fly-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "fly.diagram.delete",
                "when": "fly-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:fly",
        "onCommand:fly.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/fly-extension",
    "dependencies": {
        "sprotty-vscode": "^0.1.0"
    },
    "devDependencies": {
        "@types/node": "^8.0.0",
        "@types/vscode": "1.46.0",
        "rimraf": "^2.6.3",
        "source-map-loader": "^1.0.2",
        "ts-loader": "^8.0.3",
        "tslint": "^5.11.0",
        "typescript": "3.8.3",
        "vscode-languageclient": "^5.2.1",
        "vscode-languageserver": "^5.2.1",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf extension/lib extension/pack",
        "build": "tsc && webpack --mode=development",
        "watch": "tsc -w",
        "watch:webpack": "webpack --mode=development --watch",
        "package": "vsce package",
        "publish": "vsce publish"
    }
}
