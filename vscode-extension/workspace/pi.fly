var local = [type="smp", nthread=4]

var ch = [type="channel"] on local

func pi(){	
   var r = [type="random"]
   var x = r.nextDouble()
   var y = r.nextDouble()
   var msg = 0
 
   if((x * x)+(y * y) < 1.0){msg = 1}
   ch!msg on local
}


func estimation(){
   var sum = 0
   var crt = 0
   for i in [0:100] {
       sum += ch? as Integer
       crt += 1
}
   println "pi estimation: " + (sum*4.0) / crt
}


fly pi in [0:100] on local thenall estimation 
